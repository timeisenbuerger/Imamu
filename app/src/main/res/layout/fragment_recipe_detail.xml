<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="recipe"
            type="com.github.tei.imamu.data.entity.Recipe" />
        <variable
            name="viewModel"
            type="com.github.tei.imamu.viewmodel.recipe.detail.RecipeDetailViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_recipe_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_recipe_margin"
                android:layout_marginTop="@dimen/default_recipe_margin"
                android:layout_marginEnd="@dimen/default_recipe_margin"
                android:text="@{viewModel.currentRecipe.title}"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="@string/sample_recipe_title" />

            <ImageView
                android:id="@+id/image_recipe"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="@dimen/default_recipe_margin"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                tools:src="@mipmap/pancakes" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_features"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/default_recipe_margin"
                android:layout_marginEnd="@dimen/default_recipe_margin"
                app:chipSpacingHorizontal="16dp"
                app:singleLine="false"
                app:singleSelection="false"></com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_decrease_servings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_recipe_margin"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:srcCompat="@drawable/ic_remove_black" />

                <TextView
                    android:id="@+id/text_servings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_recipe_padding"
                    android:layout_marginTop="@dimen/default_recipe_margin"
                    android:layout_marginBottom="@dimen/default_recipe_margin"
                    android:text='@{viewModel.currentRecipe.servingsNumber + " Portionen"}'
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="2 Portionen" />

                <ImageButton
                    android:id="@+id/button_increase_servings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_recipe_margin"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:srcCompat="@drawable/ic_add_black" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_title_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_recipe_margin"
                android:layout_marginEnd="@dimen/default_recipe_margin"
                android:text="@string/recipe_ingredients_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/list_view_ingredients"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/default_recipe_margin"
                android:layout_marginEnd="@dimen/default_recipe_margin"
                android:nestedScrollingEnabled="true"></ListView>

            <TextView
                android:id="@+id/text_title_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_recipe_margin"
                android:layout_marginTop="@dimen/default_recipe_margin"
                android:layout_marginEnd="@dimen/default_recipe_margin"
                android:text="@string/recipe_preparation_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_preparation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_recipe_margin"
                android:layout_marginTop="@dimen/default_recipe_padding"
                android:layout_marginEnd="@dimen/default_recipe_margin"
                android:layout_marginBottom="@dimen/default_recipe_margin"
                android:text="@{viewModel.currentRecipe.preparation}"
                tools:text="@string/sample_preparation" />

        </LinearLayout>
    </ScrollView>
</layout>