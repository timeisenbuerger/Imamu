<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.github.tei.imamu.viewmodel.recipe.AddRecipeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_view_meal"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:contentDescription="@string/image_view_meal_text"
                        android:scaleType="centerCrop"
                        tools:src="@mipmap/pancakes"
                        android:foreground="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/text_view_recipe_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_recipe_margin"
                        android:layout_marginTop="@dimen/default_recipe_padding"
                        android:layout_marginEnd="@dimen/default_recipe_margin"
                        android:text="@string/recipe_title_text"
                        style="@style/caption_medium"/>

                    <EditText
                        android:id="@+id/edit_text_recipe_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_recipe_margin"
                        android:layout_marginEnd="@dimen/default_recipe_margin"
                        android:hint="@string/insert_recipe_title"
                        android:text="@={viewModel.recipe.title}"
                        style="@style/edit_text_string_style"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/text_view_servings"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/default_recipe_margin"
                            android:layout_weight="1"
                            android:labelFor="@id/edit_text_number_servings"
                            android:paddingTop="@dimen/default_recipe_padding"
                            android:text="@string/recipe_servings_text"
                            style="@style/caption_medium"/>

                        <EditText
                            android:id="@+id/edit_text_number_servings"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/default_recipe_margin"
                            android:layout_marginEnd="@dimen/default_recipe_margin"
                            android:layout_weight="1"
                            android:padding="@dimen/default_recipe_padding"
                            android:text="@={viewModel.recipe.servingsNumber}"
                            style="@style/edit_text_number_style" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_view_recipe_ingredients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_recipe_margin"
                            android:layout_marginTop="@dimen/default_recipe_margin"
                            android:layout_marginEnd="@dimen/default_recipe_margin"
                            android:text="@string/recipe_ingredients_text"
                            style="@style/caption_medium" />

                        <ImageButton
                            android:id="@+id/button_add_ingredient"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_recipe_margin"
                            android:layout_weight="1"
                            android:background="@color/white"
                            app:srcCompat="@drawable/ic_add_black" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/list_view_ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </ListView>


                    <TextView
                        android:id="@+id/text_view_recipe_preparation"
                        style="@style/caption_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_recipe_margin"
                        android:layout_marginTop="@dimen/default_recipe_margin"
                        android:layout_marginEnd="@dimen/default_recipe_margin"
                        android:text="@string/recipe_preparation_text" />

                    <EditText
                        android:id="@+id/multi_edit_text_recipe_preparation"
                        style="@style/edit_text_string_multi_style"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="@dimen/default_recipe_margin"
                        android:layout_marginEnd="@dimen/default_recipe_margin"
                        android:layout_marginBottom="@dimen/default_recipe_margin"
                        android:background="@drawable/edit_view_border"
                        android:gravity="start|top"
                        android:hint="@string/insert_recipe_preparation"
                        android:padding="@dimen/default_recipe_padding"
                        android:text="@={viewModel.recipe.preparation}" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_view_recipe_preparation_time"
                            style="@style/caption_medium"
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_recipe_margin"
                            android:layout_marginTop="@dimen/default_recipe_margin"
                            android:layout_marginEnd="@dimen/default_recipe_margin"
                            android:layout_marginBottom="@dimen/default_recipe_margin"
                            android:layout_weight="1"
                            android:text="@string/recipe_preparation_time_text" />

                        <EditText
                            android:id="@+id/edit_text_preparation_time"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="@dimen/default_recipe_margin"
                            android:layout_weight="1"
                            android:text="@={viewModel.recipe.preparationTime}"
                            style="@style/edit_text_number_style"/>

                        <TextView
                            android:id="@+id/text_view_recipe_preparation_time_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_recipe_margin"
                            android:layout_marginEnd="@dimen/default_recipe_margin"
                            android:layout_marginBottom="@dimen/default_recipe_margin"
                            android:layout_weight="1"
                            android:text="@string/recipe_time_unit_text"
                            style="@style/caption_small"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_view_recipe_baking_time"
                            style="@style/caption_medium"
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_recipe_margin"
                            android:layout_marginTop="@dimen/default_recipe_margin"
                            android:layout_marginEnd="@dimen/default_recipe_margin"
                            android:layout_marginBottom="@dimen/default_recipe_margin"
                            android:layout_weight="1"
                            android:text="@string/recipe_baking_time_text" />

                        <EditText
                            android:id="@+id/edit_text_baking_time"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="@dimen/default_recipe_margin"
                            android:layout_weight="1"
                            android:text="@={viewModel.recipe.bakingTime}"
                            style="@style/edit_text_number_style" />

                        <TextView
                            android:id="@+id/text_view_recipe_baking_time_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_recipe_margin"
                            android:layout_marginEnd="@dimen/default_recipe_margin"
                            android:layout_marginBottom="@dimen/default_recipe_margin"
                            android:layout_weight="1"
                            android:text="@string/recipe_time_unit_text"
                            style="@style/caption_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_view_recipe_rest_time"
                            style="@style/caption_medium"
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_recipe_margin"
                            android:layout_marginTop="@dimen/default_recipe_margin"
                            android:layout_marginEnd="@dimen/default_recipe_margin"
                            android:layout_marginBottom="@dimen/default_recipe_margin"
                            android:layout_weight="1"
                            android:text="@string/recipe_rest_time_text" />

                        <EditText
                            android:id="@+id/edit_text_rest_time"
                            style="@style/edit_text_number_style"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="@dimen/default_recipe_margin"
                            android:layout_weight="1"
                            android:text="@={viewModel.recipe.restTime}"/>

                        <TextView
                            android:id="@+id/text_view_recipe_rest_time_unit"
                            style="@style/caption_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_recipe_margin"
                            android:layout_marginEnd="@dimen/default_recipe_margin"
                            android:layout_marginBottom="@dimen/default_recipe_margin"
                            android:layout_weight="1"
                            android:text="@string/recipe_time_unit_text" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_view_recipe_type"
                        style="@style/caption_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_recipe_margin"
                        android:layout_marginTop="@dimen/default_recipe_margin"
                        android:layout_marginEnd="@dimen/default_recipe_margin"
                        android:layout_weight="1"
                        android:text="@string/type_of_recipe" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_recipe_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/default_recipe_margin"
                        android:layout_marginEnd="@dimen/default_recipe_margin"
                        app:chipSpacingHorizontal="8dp"
                        app:singleSelection="true"/>

                    <TextView
                        android:id="@+id/text_view_recipe_nutrition"
                        style="@style/caption_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_recipe_margin"
                        android:layout_marginTop="@dimen/default_recipe_margin"
                        android:layout_marginEnd="@dimen/default_recipe_margin"
                        android:layout_weight="1"
                        android:text="@string/recipe_nutrition" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_nutrition"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/default_recipe_margin"
                        android:layout_marginEnd="@dimen/default_recipe_margin" />

                    <TextView
                        android:id="@+id/text_view_difficulty"
                        style="@style/caption_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_recipe_margin"
                        android:layout_marginTop="@dimen/default_recipe_margin"
                        android:layout_marginEnd="@dimen/default_recipe_margin"
                        android:layout_marginBottom="@dimen/default_recipe_padding"
                        android:text="@string/recipe_difficulty_text" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_difficulty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/default_recipe_margin"
                        android:layout_marginEnd="@dimen/default_recipe_margin"
                        android:layout_marginBottom="@dimen/default_recipe_padding"
                        app:chipSpacingHorizontal="8dp"
                        app:singleSelection="true" />

                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>