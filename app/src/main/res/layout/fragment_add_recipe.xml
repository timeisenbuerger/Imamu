<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.github.tei.imamu.viewmodel.recipe.AddRecipeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_view_meal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_recipe_margin"
                    android:contentDescription="@string/image_view_meal_text"
                    android:padding="@dimen/default_recipe_padding"
                    tools:src="@mipmap/pancakes" />

                <TextView
                    android:id="@+id/text_view_recipe_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_recipe_margin"
                    android:layout_marginEnd="@dimen/default_recipe_margin"
                    android:text="@string/recipe_title_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_text_recipe_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_recipe_margin"
                    android:layout_marginEnd="@dimen/default_recipe_margin"
                    android:autofillHints=""
                    android:background="@drawable/edit_view_border"
                    android:ems="10"
                    android:hint="@string/insert_recipe_title"
                    android:inputType="textPersonName"
                    android:padding="@dimen/default_recipe_padding"
                    android:text="@={viewModel.title}"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/text_view_servings"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/default_recipe_margin"
                        android:layout_weight="1"
                        android:labelFor="@id/edit_text_number_servings"
                        android:paddingTop="@dimen/default_recipe_padding"
                        android:text="@string/insert_number_servings"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_text_number_servings"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/default_recipe_margin"
                        android:layout_marginEnd="@dimen/default_recipe_margin"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:padding="@dimen/default_recipe_padding"
                        android:textAlignment="center"
                        android:text="@={viewModel.servingsNumber}"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_view_recipe_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_recipe_margin"
                    android:layout_marginTop="@dimen/default_recipe_margin"
                    android:layout_marginEnd="@dimen/default_recipe_margin"
                    android:text="@string/recipe_ingredients_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/multi_edit_text_recipe_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="@dimen/default_recipe_margin"
                    android:layout_marginEnd="@dimen/default_recipe_margin"
                    android:autofillHints=""
                    android:background="@drawable/edit_view_border"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="@string/insert_recipe_ingredients"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/default_recipe_padding"
                    android:text="@={viewModel.ingredients}"/>

                <TextView
                    android:id="@+id/text_view_recipe_preparation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_recipe_margin"
                    android:layout_marginTop="@dimen/default_recipe_margin"
                    android:layout_marginEnd="@dimen/default_recipe_margin"
                    android:text="@string/recipe_preparation_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/multi_edit_text_recipe_preparation"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="@dimen/default_recipe_margin"
                    android:layout_marginEnd="@dimen/default_recipe_margin"
                    android:layout_marginBottom="@dimen/default_recipe_margin"
                    android:autofillHints=""
                    android:background="@drawable/edit_view_border"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="@string/insert_recipe_preparation"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/default_recipe_padding"
                    android:text="@={viewModel.preparation}"/>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>