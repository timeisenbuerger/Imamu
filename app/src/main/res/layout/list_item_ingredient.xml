<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/text_view_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_recipe_margin"
        android:layout_marginBottom="@dimen/default_recipe_margin"
        android:layout_weight="1"
        android:hint="@string/recipe_ingredient_amount" />

    <TextView
        android:id="@+id/text_view_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_recipe_margin"
        android:layout_marginBottom="@dimen/default_recipe_margin"
        android:layout_weight="1"
        android:hint="@string/recipe_ingredient_unit" />

    <TextView
        android:id="@+id/text_view_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_recipe_margin"
        android:layout_marginBottom="@dimen/default_recipe_margin"
        android:layout_weight="1"
        android:hint="@string/recipe_ingredients_text" />
</LinearLayout>